# ZKBot Configuration Example
# Copy this file to .env and update values for your environment

# Serial Connection Settings
SERIAL_PORT=COM3
SERIAL_BAUD=9600
SERIAL_TIMEOUT=2

# Robot Workspace Limits (in mm)
WORKSPACE_X_MIN=-100
WORKSPACE_X_MAX=100
WORKSPACE_Y_MIN=-100
WORKSPACE_Y_MAX=100
WORKSPACE_Z_MIN=0
WORKSPACE_Z_MAX=150

# Speed Settings
SPEED_OVERRIDE_DEFAULT=50
SPEED_OVERRIDE_MIN=10
SPEED_OVERRIDE_MAX=200

# Feedrate Limits (mm/min)
FEEDRATE_MIN=1
FEEDRATE_MAX=500

# Debug Settings
DEBUG_MODE=False
LOG_LEVEL=INFO

# Programs Directory
PROGRAMS_DIR=./programs

# UI Settings
WINDOW_WIDTH=1300
WINDOW_HEIGHT=700
